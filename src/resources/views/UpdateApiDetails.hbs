<div class="wrapper d-flex justify-content-center align-self-center">
    <form class="form mt-5" action="/update/apidetail/{{apidetail.0._id}}?_method=PUT" method="POST">
        <h1 class="d-flex justify-content-center">Update API Detail</h1>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name"  name="name" required
            value="{{apidetail.0.name}}"
                >
        </div>
        <div class="form-group">
            <label for="code">Code:</label>
            <input type="text" class="form-control" id="code"  name="code" required
            value="{{apidetail.0.code}}"
                >
        </div>
        <div class="form-group">
            <label for="image">Image:</label>
            <input type="text" class="form-control" id="image" name="image" required
                value= "{{apidetail.0.image}}"
                >
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>