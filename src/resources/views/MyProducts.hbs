<div class="wrapper">
    <div class="container">
        <button type="button" class="mt-5 btn btn-success">
             Số lượng sản phẩm <span class="badge badge-light">{{count}}</span>
        </button>
        <div class="row">
            {{#each products}}
            <div class="col-lg-3 col-12 mt-3 mb-3">
                <div class="card product">
                    <img class="card-img-top product_img" src="{{this.image}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text product_text">{{this.description}}</p>
                        <a href="{{this.link}}" target="_blank" class="btn btn-success">Go to website</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>